<Window x:Class="WpfApplication3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="1024" Width="800">
    <Grid Width="800" Height="1025" VerticalAlignment="Top">
        <Grid Width="800" Height="512" VerticalAlignment="Top">
            <StackPanel HorizontalAlignment="Center">
                <MediaElement LoadedBehavior="Manual" x:Name="myMedia" Source="c:\Windows\Media\testvideo.avi"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Play" Click="Play_Click" Margin="5" x:Name="playbtn"/>
                    <Button Content="Pause" Click="Pause_Click" Margin="5" x:Name="pausebtn" />
                    <Button Content="Stop " Click="Stop_Click" Margin="5" x:Name="stopbtn"/>
                </StackPanel>
            </StackPanel>
        </Grid>
        <Grid Width="800" Height="512" VerticalAlignment="Bottom">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <MediaElement LoadedBehavior="Manual" x:Name="myPhoto" Source="c:\Windows\Media\Android.jpg"/>
                <Button Content="Photo" Click="Photo_Click" Margin="5" Height="100" Width="100" VerticalAlignment="Top" x:Name="photobtn"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
